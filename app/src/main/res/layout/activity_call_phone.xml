<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CallPhone">

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:autofillHints="number"
              android:id="@+id/editText"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/callButton"
            android:layout_below="@id/editText"
            android:text="@string/call_phone"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCheckBill"
            android:text="@string/check_bill"
            android:layout_toLeftOf="@id/callButton"
            android:layout_toStartOf="@id/callButton"
            android:layout_alignTop="@id/callButton"
    />





</RelativeLayout>